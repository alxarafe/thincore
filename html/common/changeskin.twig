{% extends "master/index.twig" %}

{% block title %}Cambie el skin y pruebe el resultado{% endblock %}

{% block body %}
    {{ view.newRow(view.blockContainer(view.title('Cambie el skin y pruebe el resultado')))|raw }}
    <!-- <div class="container"> -->
        <form action='?call=ChangeSkin' method='post' accept-charset="utf-8">
            <div class="col-xm-4">&nbsp;</div>
            <div class="col-xm-4">

                {% if (message) %}{{ message }}{% endif %}

                {% if view.skins|length > 0 %}
                    <div class="form-group">
                        <label>Plantilla (Skin)</label>
                        <select id="skin" name="skin" class="form-control">
                            {% for skin in view.skins %}
                                <option {{ skin==view.skin ? "selected":"" }}>{{ skin }}</option>
                            {% endfor %}
                        </select>
                    </div>
                {% endif %}

                <button name="submit" type="submit" class="btn btn-default">Guardar los cambios</button>
                <!-- <button name="clear" type="submit" class="btn btn-default">Borrar los campos</button> -->
                <button name="cancel" type="submit" class="btn btn-default">Abandonar</button>
            </div>
            <div class="col-x-4">&nbsp;</div>
        </form>
    <!-- </div> -->
    <!-- /#page-wrapper -->
{% endblock %}