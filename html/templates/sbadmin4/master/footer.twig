<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="login.html">Logout</a>
            </div>
        </div>
    </div>
</div>

<!-- Including jsCode -->
{% block javascriptsFooter %}
    {# Including jsCode #}
    <!-- Bootstrap core JavaScript-->
    <script src="{{ ctrl.getResource('/vendor/jquery/jquery.js') }}"></script>
    <script src="{{ ctrl.getResource('/vendor/bootstrap/js/bootstrap.bundle.js') }}"></script>

    <!-- Core plugin JavaScript-->
    <script src="{{ ctrl.getResource('/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

    <!-- Page level plugin JavaScript-->
    <script src="{{ ctrl.getResource('/vendor/chart.js/Chart.min.js') }}"></script>
    <script src="{{ ctrl.getResource('/vendor/datatables/jquery.dataTables.js') }}"></script>
    <script src="{{ ctrl.getResource('/vendor/datatables/dataTables.bootstrap4.js') }}"></script>

    <!-- Custom scripts for all pages-->
    <script src="{{ ctrl.getResource('/js/sb-admin.min.js') }}"></script>

    <!-- Demo scripts for this page-->
    <script src="{{ ctrl.getResource('/js/demo/datatables-demo.js') }}"></script>
    <script src="{{ ctrl.getResource('/js/demo/chart-area-demo.js') }}"></script>

    {% for js in jsCode %}
        <script type="text/javascript" src="{{ js }}"></script>
    {% endfor %}
    <!-- start of getFooter -->
    {{ view.getFooter() | raw }}
    <!-- end of getFooter -->
{% endblock %}
<!-- End of jsCode inclusion -->
